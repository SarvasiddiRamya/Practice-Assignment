<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Online Wallet System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @*<img src="~/Images/online.jpg" />*@
    @*<img src="~/Images/Projectonline.jpg" style="height:100%; background-repeat:no-repeat;background-size:cover;" />*@
    @*<option style="height:100%; background-position:center;background-size:cover;

  url('@Url.Content("~/Images/Projectonline.jpg")')no-repeat left center;"></option>*@
    <option style="height:100%; background-position:center;background-size:cover;

        url('@Url.Content("~/Images/Projectonline.jpg")')no-repeat left center"></option>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Online Wallet System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Add Money", "Login", "Account")</li>
                    <li>@Html.ActionLink("Check Balance", "Login", "Account")</li>
                    <li>@Html.ActionLink("Transfer", "Login", "Account")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Online Wallet System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
