<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Online Wallet Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
@*<h2 style="text-align:center;color:hotpink">Payment Wallet System</h2>*@
<body>
    @*<a><img src="~/Contextimage/wallet.jpg" /></a>*@
