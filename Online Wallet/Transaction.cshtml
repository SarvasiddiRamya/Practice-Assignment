@model AccountProject.Models.AmountAdd

@{
    ViewBag.Title = "Transaction";
}

<h2 style="color:darkblue">Transfer Your Money Here!</h2>


@using (Html.BeginForm("Transaction", "HomePage", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @*<input type="label" value="From AccountNo" />*@
        @Html.LabelFor(model => model.AccountNo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.AccountNo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AccountNo, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.AccountNo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.AccountNo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AccountNo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Transfer" name="btn" class="btn btn-default" />
            @*@ViewBag.data*@
        </div>
    </div>
    @if (ViewBag.data != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.data");
            };
        </script>
    }
</div>
}

<div>
    @Html.ActionLink("Back to Menu", "Menu1")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
